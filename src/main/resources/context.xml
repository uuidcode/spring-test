<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <context:component-scan base-package="com.github.uuidcode.spring.test.component"/>

    <bean id="tool" class="com.github.uuidcode.spring.test.ToolFactory">
        <property name="toolId" value="1"/>
    </bean>

    <bean class="com.github.uuidcode.spring.test.ToolFactoryPostProcessor" />
</beans>